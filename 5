#include <iostream>
#include <iomanip>
using namespace std;

double f(double x) {
    return -2.4 * x * x + 5 * x - 3;
}

int main() {
    cout << "--------------" << endl;
    cout << "   x   |    y " << endl;
    cout << "--------------" << endl;

    for (double x = -2.0; x <= 2.0; x += 0.5) {
        cout << setw(5) << fixed << setprecision(1) << x << "  | "
             << setw(6) << fixed << setprecision(2) << f(x) << endl;
    }

    cout << "--------------" << endl;
    return 0;
}
