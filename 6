#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double a = 0.1, b = 1.0, h = 0.1;
    double epsilon = 1e-4;

    for (double x = a; x <= b + 1e-12; x += h) {
        double S = 0.0;
        double t;
        int i = 0;
        double fact = 1;

        do {
            if (i > 0) fact *= i;
            t = (2*i + 1) * pow(x, 2*i) / fact;
            S += t;
            i++;
        } while (fabs(t) >= epsilon);
        double y = (1 + 2*x*x) * exp(x*x);
        cout << "x = " << x
             << "  S(x) = " << S
             << "  y(x) = " << y
             << "  |S - y| = " << fabs(S - y)
             << endl;
    }

    return 0;
}
