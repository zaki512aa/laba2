//WHILE
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int a = 1;
    while (a <= 19) {
        double f = (a + 3) / ((a - 4.0) * (a - 4.0));
        cout << "a = " << a << "   f = " << f << endl;
        a = a + 3;
    }
    return 0;
}
//DO-WHILE 
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int a = 1;
    do {
        double f = (3.0 + a) / ((a - 4.0) * (a - 4.0));
        cout << "a = " << a << "   f = " << f << endl;
        a = a + 3;
    } while (a <= 19);
    return 0;
}
//FOR 
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    for (int a = 1; a <= 19; a = a + 3) {
        double f = (3.0 + a) / ((a - 4.0) * (a - 4.0));
        cout << "a = " << a << "   f(a) = " << f << endl;
    }
    return 0;
}
